    "version": "0.2.0",
    "configurations": [
        // Mingw64 debug tasks:
        {
            "name": "[Mingw64] Run Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Mingw64/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "[Mingw64] Build Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "[Mingw64] Run Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Mingw64/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "preLaunchTask": "[Mingw64] Build Release",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        // MSBuild debug tasks:
        {
            "name": "[MSBuild] Run Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MSBuild/Output/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "[MSBuild] Build Debug"
        },
        {
            "name": "[MSBuild] Run Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MSBuild/Output/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "[MSBuild] Build Release"
        }
    ]
}