    "version": "0.2.0",
    "configurations": [
        // MSBuild debug tasks:
        {
            "name": "[MSBuild] Run Debug (Dynamic Linking)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MSBuild/Output/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "[MSBuild] Dynamic Linking Build"
        },
        {
            "name": "[MSBuild] Run Debug (Static Linking)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MSBuild/Output/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "[MSBuild] Static Linking Build"
        },
        // MinGW debug tasks:
        {
            "name": "[MinGW] Run Debug (Dynamic Linking Build with Symbols)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MinGW/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "[MinGW] Dynamic Linking Build (Symbols)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "[MinGW] Run Debug (Dynamic Linking Build without Symbols)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MinGW/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "[MinGW] Dynamic Linking Build (No Symbols)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "[MinGW] Run Debug (Static Linking Build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/MinGW/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "[MinGW] Static Linking Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}